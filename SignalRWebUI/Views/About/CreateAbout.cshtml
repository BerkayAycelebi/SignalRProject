@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Hakkımızda İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Hakkımızda Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Title">Başlık Giriniz</label>
                                <input type="text" class="form-control" asp-for="Title" id="Title">

                            </div>
                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="ImageUrl">Görseli Giriniz</label>
                                <input type="text" class="form-control" asp-for="ImageUrl" id="title">

                            </div>
                        </div>


                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açıklama Giriniz</label>
                                <textarea class="form-control" rows="5" asp-for="Description" id="Description"></textarea>
                               

                            </div>
                        </div>


                        <div class="card-action">
                            <button class="btn btn-primary">Hakkımızda Ekle</button>

                        </div>
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>

