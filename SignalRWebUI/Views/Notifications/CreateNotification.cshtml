@model CreateNotificationDto
@{
    ViewData["Title"] = "CreateNotification";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Bildirim İşlemleri</h4>
        <div class="row">
            <div class="col-md-12">
                <form method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="card-title">Yeni Bildirim Girişi</div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for="Type">Bildirim Türü</label>
                                <input type="text" class="form-control" asp-for="Type" id="Type">

                            </div>

                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="Icon">Bildirim İkonu</label>
                                <input type="text" class="form-control" asp-for="Icon" id="Icon">

                            </div>

                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="Description">Açıklama</label>
                                <input type="text" class="form-control" asp-for="Description" id="Description">

                            </div>

                        </div>

                        <div class="card-body">
                            <div class="form-group">
                                <label for="categoryname">Kategori Adınızı Giriniz</label>
                                <input type="text" class="form-control" asp-for="CategoryName" id="categoryname">

                            </div>

                        </div>

                        <div class="card-action">
                            <button class="btn btn-primary">Kategori Ekle</button>

                        </div>
                    </div>
                </form>
            </div>


        </div>
    </div>
</div>

