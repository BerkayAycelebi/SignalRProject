@model RegisterDto
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
  
	<meta charset="utf-8">
	<title>SignalR Restoran Kayıt</title>
	<!-- Mobile Specific Metas -->
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<!-- Font-->
	<link rel="stylesheet" type="text/css" href="~/colorlib-regform-32/css/nunito-font.css">
	<!-- Main Style Css -->
	<link rel="stylesheet" href="~/colorlib-regform-32/css/style.css" />
</head>
<body class="form-v6">
	<div class="page-content">
		<div class="form-v6-content">
			<div class="form-left">
                <img src="~/colorlib-regform-32/images/Sauce1.jpg" width="484px" height="660px" />

			</div>
			<form class="form-detail" method="post">
				<h2>Yeni Kullanıcı Kaydı</h2>
				<div class="form-row">
					<input type="text" name="full-name" id="full-name" class="input-text" placeholder="Adınız" asp-for="Name" required>
				</div>
				<div class="form-row">
					<input type="text" name="full-name" id="full-name" class="input-text" placeholder="Soy Adınız" asp-for="Surname" required>
				</div>
				<div class="form-row">
					<input type="text" name="full-name" id="full-name" class="input-text" placeholder="Kullanıcı Adınız" asp-for="Username" required>
				</div>
				<div class="form-row">
						<input type="text" name="your-email" id="your-email" class="input-text" placeholder="Mail Adresinşz" asp-for="Mail" required pattern="[^@@]+@@[^@@]+.[a-zA-Z]{2,6}">
				</div>
				<div class="form-row">
					<input type="password" name="password" id="password" class="input-text" placeholder="Şifreniz" asp-for="Password" required>
				</div>
			
				<div class="form-row-last">
					<input type="submit" name="register" class="register" value="Kayıt Ol">
				</div>
			</form>
		</div>
	</div>
</body>
</html>